<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="5dof_robot_manipulator">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- COLOR DEFINITIONS -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="dark_blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="dark_grey">
        <color rgba="0.25 0.25 0.25 1"/>
    </material>


    <!-- We add a dummy world link and a fixed joint to fix our robot to the world -->
    <!-- This is important for gazebo simulation -->

    <link name="world"/>

    <joint name="fixed_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.2" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="link_1"/>

        <origin rpy="0 0 0" xyz="0 0 0.1" />
        
        <axis xyz="0 0 1"/>
        <limit effort="300" velocity="2.0" lower="-3.141593" upper="3.141593"/>
    </joint>

    <link name="link_1">
        <visual>
            <geometry>
                <cylinder length="0.215" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.1075" />
            <material name="dark_blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.215" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.1075" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.215" radius="0.05">
            <origin rpy="0 0 0" xyz="0 0 0.1075" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>

        <origin rpy="0 -1.570796 0" xyz="-0.05 0 0.165" />
        
        <axis xyz="0 0 1"/>
        <limit effort="300" velocity="2.0" lower="-3.141593" upper="3.141593"/>
    </joint>

    <link name="link_2">
        <visual>
            <geometry>
                <cylinder length="0.51" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.205 0 0.05" />
            <material name="dark_grey"/>
        </visual>
        <collision> 
            <geometry>
                <cylinder length="0.51" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.205 0 0.05" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.51" radius="0.05">
            <origin rpy="0 1.570796 0" xyz="0.205 0 0.05" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="link_2"/>
        <child link="link_3"/>

        <origin rpy="0 0 0" xyz="0.41 0 0"/>
        
        <axis xyz="0 0 1"/>
        <limit effort="300" velocity="2.0" lower="-3.141593" upper="3.141593"/>
    </joint>

    <link name="link_3">
        <visual>
            <geometry>
                <cylinder length="0.53" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.215 0 -0.05" />
            <material name="dark_blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.53" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.215 0 -0.05" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.53" radius="0.05">
            <origin rpy="0 1.570796 0" xyz="0.215 0 -0.05" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="joint_4" type="revolute">
        <parent link="link_3"/>
        <child link="link_4"/>

        <origin rpy="0 0 0" xyz="0.43 0 0"/>
        
        <axis xyz="0 0 1"/>
        <limit effort="300" velocity="2.0" lower="-3.141593" upper="3.141593"/>
    </joint>

    <link name="link_4">
        <visual>
            <geometry>
                <cylinder length="0.115" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.0075 0 0.05" />
            <material name="dark_grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.115" radius="0.05"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0.0075 0 0.05" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.115" radius="0.05">
            <origin rpy="0 1.570796 0" xyz="0.0075 0 0.05" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="joint_5" type="revolute">
        <parent link="link_4"/>
        <child link="link_5"/>

        <origin rpy="0 1.570796 0" xyz="0.065 0 0.05"/>
        
        <axis xyz="0 0 1"/>
        <limit effort="300" velocity="2.0" lower="-3.141593" upper="3.141593"/>
    </joint>

    <link name="link_5">
        <visual>
            <geometry>
                <cylinder length="0.08" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.04" />
            <material name="dark_blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.08" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.04" />
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.08" radius="0.05">
            <origin rpy="0 0 0" xyz="0 0 0.04" />
        </xacro:inertial_cylinder>
    </link>


</robot>
